<h3><%= @article.title %></h3>	 
<p><%= @article.text %></p>

<h2>Комментарии</h2>
	<%= render @article.comments %>
	
	<%= form_for([@article, @article.comments.build], :html => {:class => 'eighty'}) do |f| %>
	<h2>Добавить комментарий:</h2>
	  <p>
	    <%= f.label :Имя %><br>
	    <%= f.text_field :commenter, :class => 'form-control' %>
	  </p>
	  <p>
	    <%= f.label :Комментарий %><br>
	    <%= f.text_area :body, :class => 'form-control' %>
	  </p>
	  <p>
	    <%= f.submit "Добавить комментарий", :class => 'btn btn-success'  %>
	  </p>
	<% end %>	
 
<%= link_to 'Изменить статью', edit_article_path(@article) %> |
<%= link_to 'Назад к списку', articles_path %>